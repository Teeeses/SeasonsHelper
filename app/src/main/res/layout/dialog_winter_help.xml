<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/more_standard_margin"
        android:paddingBottom="@dimen/more_standard_margin"
        android:background="@color/black"
        android:alpha="0.6"
        android:paddingLeft="@dimen/standard_margin"
        android:paddingRight="@dimen/standard_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/standard_text"
            android:textColor="@color/white"
            android:text="@string/winter_help_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/mini_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/control"
            android:textColor="@color/white"
            android:textSize="@dimen/more_standard_text"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/four_side"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/imageFingerHelp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:src="@drawable/finger_help"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>